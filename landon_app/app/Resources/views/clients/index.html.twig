{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
      <div class="medium-12 large-12 columns">
        <h4>Clients</h4>
        <div class="medium-1  columns">SEARCH:</div>
        <div class="medium-2  columns"><input type="text" /></div>
        <div class="medium-2  columns"><button type="button" class="button">SEND</button></div>
        <div class="medium-2  columns"><button type="button" class="button">ADD NEW CLIENT</button></div>

        <table class="stack">
          <thead>
            <tr>
              <th width="200">Name</th>
              <th width="200">Email</th>
              <th width="200">Action</th>
            </tr>
          </thead>
          <tbody>
            {% for client in clients %}
              <tr>
                <td>{{ client.name }} {{ client.lastName }}</td>
                <td>{{ client.email }}</td>
                <td>
                  <a class="hollow button" href="/clients/edit/{{ client.id }}">EDIT</a>
                  <a class="hollow button alert" href="/clients/destroy/{{ client.id }}">DELETE</a>
                  <a class="hollow button warning" href="{{ path('booking', {'id_client': client.id}) }}">BOOK A ROOM</a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>

{% endblock %}
