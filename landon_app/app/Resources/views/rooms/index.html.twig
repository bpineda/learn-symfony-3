{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
      <div class="medium-12 large-12 columns">
        <h4>Clients</h4>
        <div class="medium-1  columns">SEARCH:</div>
        <div class="medium-2  columns"><input type="text" /></div>
        <div class="medium-2  columns"><button type="button" class="button">SEND</button></div>
        <div class="medium-2  columns"><button type="button" class="button">ADD NEW CLIENT</button></div>

        <table class="stack">
          <thead>
            <tr>
              <th width="200">ID</th>
              <th width="200">Room</th>
              <th width="200">Floor</th>
              <th width="200">Action</th>
            </tr>
          </thead>
          <tbody>
          {% for item in result %}
                
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.name }}</td>
                    <td>{{ item.floor }}</td>
                    <td>
                        <button class="hollow button" href="#">EDIT</button>
                        <button class="hollow button alert" href="#">DELETE</button>
                        <a class="hollow button warning" href="/book/1">BOOK A ROOM</a>
                    </td>
                </tr>
          {% endfor %}
            
            
          </tbody>
        </table>
      </div>
    </div>

{% endblock %}
